extends ./layout.jade
block pagina
  container(class="full-height text-center")
   div(class="data")
    div(class="col-md-5 center-block no-float top-space text-left")
     h1 Cargar archivos
     form(method="post" action="/upload" enctype="multipart/form-data" style="margin-top:1.5em;")
      div(class="form-group")
       label Video o Imagen
       input(type="text" name="titulo" placeholder="Titulo del video o de la imagen" class="form-control")
      div(class="form-group")
       textarea(name="descripcion" placeholder="Descripcion del video o de la imagen" class="form-control")
      div(class="form-group")
       label Seleccione un archivo
       input(type="file" name="subido")
      div(class="form-group text-right")
       input(type="submit" class="btn btn-info" value="Subir")
       
